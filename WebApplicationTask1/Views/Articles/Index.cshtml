@model IEnumerable<WebApplicationTask1.Models.Articles>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<style>
    .card {
        border: 0px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0px 0px rgba(0, 0, 0, 0.3);
        padding: 20px;
        max-width: 235px;
        margin-right: 10px;
        margin-left: 5px;
        max-height: 370px;
    }

        .card img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .card h2 {
            font-size: 15px;
            margin-bottom: 7px;
        }

        .card h6 {
            font-size: 13px;
            margin-bottom: 7px;
        }

        .card .defcard {
            font-size: 13px;
        }
</style>
<h1>COBA</h1>



<div class="row row-cols-3 g-2">
    @foreach (var item in Model)
    {
        <div class="card mb-3" style="max-width: 670px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="~/img/lf.jpg" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.title</h5>
                        <p class="card-text">@item.excerpt</p>
                        <h6 class="card-subtitle mb-2 text-muted">@item.author</h6>
                        <a class="button" asp-route-id="@item.id" asp-action="details">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<br /> <br />

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Show">Show Now</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.excerpt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publish_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timeread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.featured_img)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.excerpt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publish_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeread)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.featured_img)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a> |
                <a asp-action="Show" asp-route-id="@item.id">Show</a>
            </td>
        </tr>
}
    </tbody>
</table>
