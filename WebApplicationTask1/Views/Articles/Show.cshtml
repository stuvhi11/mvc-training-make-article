@model IEnumerable<WebApplicationTask1.Models.Articles>

@{
	ViewData["Title"] = "show";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <style>
      .card {
        border: 0px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0px 0px rgba(0, 0, 0, 0.3);
        padding: 20px;
        max-width: 235px;
        margin-right: 10px;
        margin-left: 5px;
        max-height: 370px;
           
               
      }

      .card img {
        width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
      }

      .card h2 {
        font-size: 15px;
        margin-bottom: 7px;
      }

      .card h6{
        font-size: 13px;
        margin-bottom: 7px;
      }

      .card .defcard {
         font-size: 13px;
      }
      </style>
<h1>COBA</h1>



<div class="row row-cols-3 g-2">
	@foreach (var item in Model)
	{
		<div class="card mb-3" style="max-width: 670px;">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="~/img/lf.jpg" />
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">@item.title</h5>
						<p class="card-text">@item.excerpt</p>
						<h6 class="card-subtitle mb-2 text-muted">@item.author</h6>
						<a class="button" asp-route-id="@item.id" asp-action="details">Read More</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>